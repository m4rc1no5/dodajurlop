{% extends '::dashboard.html.twig' %}

{% block main %}
    <a class="btn btn-primary" id="dodaj_organizacje">Dodaj nową organizację</a>
    <a class="btn btn-primary" data-toggle="bootbox-replace" data-width="800" href="{{ path('organizacja.dodaj') }}">Dodaj nowąą oryg</a>
{% endblock %}

{% block javascripts %}
    <script>
        bootbox.setDefaults({
            onEscape: true
        });
        $(document).on("click", "#dodaj_organizacje", function(e){
            bootbox.dialog({
                message: "Hello world!",
                title: "Custom title"
            });
        });
    </script>
{% endblock %}