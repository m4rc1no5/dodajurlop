{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
    <div class="form-group row">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    </div>
    <div class="form-group row">
        <label for="username" class="col-sm-4 form-control-label">{{ 'security.login.username'|trans }}</label>
        <div class="col-sm-8">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-sm-4 form-control-label">{{ 'security.login.password'|trans }}</label>
        <div class="col-sm-8">
            <input type="password" id="password" name="_password" required="required" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-8  col-sm-offset-4">
            <div class="checkbox">
                <label>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
                </label>
            </div>
        </div>
    </div>
    <div class="col-sm-8 col-sm-offset-4">
        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-success" />
    </div>
</form>